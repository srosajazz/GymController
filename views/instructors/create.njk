{% extends "layout.njk" %}

{% block content %}
  <form class="card" method="POST" action="/instructors">
    <section class="avatar" 
      style="background:url(https://source.unsplash.com/collection/3617729/400x400) no-repeat center center/ cover"></section>
    <section class="details">

    <h3>New Instructor</h3>

     <div class="item">
      <div>Avatar URL</div>
      <div>
      <input 
          type="url"
          name="avatar_url"
          placeholder="http://"
          >
      </div>
    </div>

    <div class="item">
      <div>Instructor</div>
      <div>
       <input type="text"
              name="name"
              placeholder="Instructor Name"
      </div>
    </div>

    <div class="item">
      <div>Date of Bird</div>
      <div>
        <input type="date" 
        name="birth">
      </div>
    </div>

     <div class="item">
      <div>Gender</div>
      <div>
        <span><input type="radio" name="gender" value="M">Masculine</span>
        <span><input type="radio" name="gender" value="F">Femile</span>
      </div>
    </div>

     <div class="item">
      <div>Action Area</div>
        <input type="text"
        name="services"
          placeholder="Enter sevices of your choice"
        >
      </div>
    </div>

    <button type="submit">Save</button>
    </section>
  </form>
{% endblock content %}